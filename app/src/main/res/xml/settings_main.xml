<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">
    <ListPreference
        android:defaultValue="@string/settings_type_default"
        android:entries="@array/settings_type_labels"
        android:entryValues="@array/settings_type_values"
        android:key="@string/settings_type_key"
        android:title="@string/settings_type_label" />
    <EditTextPreference
        android:defaultValue="@string/settings_section_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_section_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_section_label" />
</PreferenceScreen>
